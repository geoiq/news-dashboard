!!!
- #render :partial => '/layouts/application_behaviours'
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %meta{"http-equiv" => "Content-Type", "content" => "text/html; charset=utf-8"}/
    %title
      =@page_title + ' - ' if @page_title
      =@product_name
    = stylesheet_link_tag "admin", :media => "all"
    /[if lt IE 7.]
      = #stylesheet_link_tag "application_ie6", :media => "all" 
  
    =javascript_include_tag 'prototype', 'effects', 'application', 'dragdrop'

  %body
    #header
      .header
        #logo
          =link_to "Map of the News | Administration", '/admin'
          %small
            =link_to "&laquo;&nbsp;Site Home", '/'
            = yield :nav
    #content
      .content
        #page{:class => "c_#{@controller.controller_name} a_#{@controller.action_name}"}
          .page
            - unless @supress_flash
              - if flash[:error]
                #error= flash[:error]
              - if flash[:warning]
                #warning= flash[:warning]
              - if flash[:notice]
                #notice= flash[:notice]
            = yield
        #side
          .side
            = yield :side

    - unless @client_footer or 1==1
      #footer
        .footer
          == &copy; #{Time.now.year} FortiusOne
    %script{:type => "text/javascript", :charset => "utf-8"}
      = yield :end_js
    