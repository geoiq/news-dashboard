class AtlasesController < ApplicationController

  layout 'admin', :except => [:show]

  before_filter :find_atlas

  ATLASES_PER_PAGE = 20

  def create
    @atlas = Atlas.new(params[:atlas])
    respond_to do |format|
      if @atlas.save
        flash[:notice] = 'Atlas was successfully created.'
        format.html { redirect_to @atlas }
        format.xml  { render :xml => @atlas, :status => :created, :location => @atlas }
      else
        format.html { render :action => "new" }
        format.xml  { render :xml => @atlas.errors, :status => :unprocessable_entity }
      end
    end
  end

  def destroy
    respond_to do |format|
      if @atlas.destroy
        flash[:notice] = 'Atlas was successfully destroyed.'        
        format.html { redirect_to atlases_path }
        format.xml  { head :ok }
      else
        flash[:error] = 'Atlas could not be destroyed.'
        format.html { redirect_to @atlas }
        format.xml  { head :unprocessable_entity }
      end
    end
  end

  def index
    if params[:user_id]
      @atlases = User.find(params[:user_id]).atlases.paginate(:page => params[:page], :per_page => ATLASES_PER_PAGE)
    else
      @atlases = Atlas.paginate(:page => params[:page], :per_page => ATLASES_PER_PAGE)
    end
    respond_to do |format|
      format.html
      format.xml  { render :xml => @atlases }
    end
  end

  def edit
  end

  def new
    @atlas = Atlas.new
    @atlas.user = current_user
    respond_to do |format|
      format.html
      format.xml  { render :xml => @atlas }
    end
  end

  def show
    respond_to do |format|
      format.html { render :layout => 'main'}
      format.xml  { render :xml => @atlas }
    end
  end

  def update
    respond_to do |format|
      if @atlas.update_attributes(params[:atlas])
        flash[:notice] = 'Atlas was successfully updated.'
        format.html { redirect_to @atlas }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @atlas.errors, :status => :unprocessable_entity }
      end
    end
  end

  private

  def find_atlas
    @atlas = Atlas.find(params[:id]) if params[:id]
  end

end